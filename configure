#!/bin/bash

set -eu

main () {
    initialize_submodules
    create_virtualenv
    install_requirements
    build_libargon2
}

initialize_submodules () {
    git submodule init
    git submodule update
}

build_libargon2 () {
    ./venv/bin/python setup.py build
}

create_virtualenv () {
    virtualenv venv -p $(which python3)
}

install_requirements () {
    ./venv/bin/pip install -e .[test]
}

main
